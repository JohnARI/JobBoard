{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<div class="p-20 flex flex-col gap-6">
		<h1>User index</h1>
		<table class="w-full text-sm text-left text-gray-500 dark:text-gray-200">
			<thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-200">
				<tr class="border border-violet-600">
					<th class="px-6 py-3">Id</th>
					<th class="px-6 py-3">Email</th>
					<th class="px-6 py-3">Roles</th>
					<th class="px-6 py-3">Firstname</th>
					<th class="px-6 py-3">Lastname</th>
					<th class="px-6 py-3">Phone</th>
					<th class="px-6 py-3">Resume</th>
					<th class="px-6 py-3">Sector</th>
					<th class="px-6 py-3">Is Verified</th>
					<th class="px-6 py-3">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr class="border border-violet-600 bg-white dark:bg-gray-800 dark: hover:bg-gray-50 dark:hover:bg-gray-600">
						<td class="px-6 py-4">{{ user.id }}</td>
						<td class="px-6 py-4">{{ user.email }}</td>
						<td class="px-6 py-4">{{ user.role}}</td>
						<td class="px-6 py-4">{{ user.firstname }}</td>
						<td class="px-6 py-4">{{ user.lastname }}</td>
						<td class="px-6 py-4">{{ user.phone }}</td>
						<td class="px-6 py-4">{{ user.resume }}</td>
						<td class="px-6 py-4">{{ user.sector }}</td>
						<td class="px-6 py-4">{{ user.isVerified ? 'Yes' : 'No' }}</td>
						<td class="px-6 py-4">
							<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="11">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class='bg-violet-600 h-10 rounded text-white font-semibold hover:bg-white border-2 px-2 py-1 w-32 hover:text-violet-600 hover:border-violet-600 transition text-center' href="{{ path('app_user_new') }}">Ajouter</a>
	</div>
{% endblock %}
