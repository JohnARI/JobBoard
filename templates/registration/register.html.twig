{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class='flex py-20 px-40 h-[calc(100vh-4rem)] '>
        <div class='flex h-full w-1/2 bg-white shadow-2xl rounded-l py-10 px-20'>
            <form method='post' class='flex flex-col w-full gap-6 m-auto'>
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h2 class='uppercase font-bold text-[1.5rem]'>register</h2>
    
                {{ form_start(registrationForm) }}
                    {{ form_widget(registrationForm.email) }}
                    {{ form_widget(registrationForm.plainPassword) }}
                    
                    <button class='bg-violet-600 h-10 rounded text-white transition font-semibold w-32 hover:bg-white border-2 hover:text-violet-600 hover:border-violet-600' type='submit'>Register</button>
                    <p class='hover:cursor-pointer'>You already have an account? <a href='login' class='text-violet-600'>Sign in</a></p>
                {{ form_end(registrationForm) }}
                {# <input class='border-b-2 border-violet-600 outline-0 h-10' type='email' value='{{ last_username }}' palceholder='email' name='email' id='inputEmail' class='form-control' autocomplete='email' required autofocus>
                <input class='border-b-2 border-violet-600 outline-0 h-10' type='password' name='password' id='inputPassword' palceholder='password' class='form-control' autocomplete='current-password' required>
                <input type='hidden' name='_csrf_token' value='{{ csrf_token('authenticate') }}'>

                
                <p class='hover:cursor-pointer'>You don't have an account? <a href='register' class='text-violet-600'>Register</a></p> #}
            </form>
        </div>

        <div id='cherries' class='flex h-full w-1/2 shadow-2xl bg-cover rounded-r' style='background-image: url(images/cherries.png)'>

        </div>
    </div>
{% endblock %}
